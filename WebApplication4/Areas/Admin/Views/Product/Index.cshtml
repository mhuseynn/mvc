@using WebApplication4.Models.Concretes
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<Product>


<table class="table">
    <a asp-action="Create">Create</a>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Tags</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        @{
                            foreach (var item2 in item.Tags!)
                            {
                                <span>@item2.Name</span>
                            }
                        }
                    </td>
                    <td><img src="~/images/@item.ImageUrl" alt="Alternate Text" /></td>
                    <td> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    <td> <a asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                </tr>
            }
        }
    </tbody>
</table>