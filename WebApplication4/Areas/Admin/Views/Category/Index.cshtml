@using WebApplication4.Models.Concretes
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<Category>


<table class="table">
    <a asp-action="Create">Create</a>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        
       @{
         foreach (var item in Model)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    <td> <a asp-action="Uptade" asp-route-id="@item.Id">Uptade</a></td>
                </tr>
            } 
       }
    </tbody>
</table>