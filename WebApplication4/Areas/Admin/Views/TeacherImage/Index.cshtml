@using WebApplication4.Models.Concretes
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<TeacherImage>


<table class="table">
    <a asp-action="Create">Create</a>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">FullName</th>
            <th scope="col">Desgination</th>
            <th scope="col">Image Url</th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Designation</td>
                    <td><img width="100px" src="~/images/@item.ImgUrl" alt="Alternate Text" /></td>
                    <td> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    <td> <a asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                </tr>
            }
        }
    </tbody>
</table>
