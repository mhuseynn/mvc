@using WebApplication4.Models.Concretes
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<Slider>


<table class="table">
	<a asp-action="Create">Create</a>
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Id</th>
			<th scope="col">Faiz</th>
			<th scope="col">Title</th>
			<th scope="col">Description</th>
			<th scope="col">Image Url</th>


		</tr>
	</thead>
	<tbody>

		@{
			foreach (var item in Model)
			{
				<tr>
					<th scope="row">1</th>
					<td>@item.Id</td>
					<td>@item.Faiz</td>
					<td>@item.Title</td>
					<td>@item.Description</td>
					<td><img src="~/images/@item.ImgUrl" alt="Alternate Text" /></td>
					<td> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
					<td> <a asp-action="Update" asp-route-id="@item.Id">Update</a></td>
				</tr>
			}
		}
	</tbody>
</table>
